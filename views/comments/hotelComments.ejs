<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-12" style="text-align: center;">
            <h1>Add New Comment to
                <%= hotel.name %>
            </h1>
        </div>
        <div class="col-md-4" style="margin: 0 auto;">
            <form action="/hotel/<%= hotel._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
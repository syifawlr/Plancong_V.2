<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <header>
        <% include partials/header %>
    </header>
    <main>
        <div class="row" style="margin: 7rem">
            <div class="col-md-3">
                <p class="lead">Plancong</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="img-thumbnail" style="padding: 0">
                    <img class="image-responsive w-100" src="<%= hotel.image %>" alt="<%= hotel.name %>">
                </div>
                <div class="text-left">
                    <h5>
                        <%= hotel.name %>
                    </h5>
                </div>
                <div>
                    <p class="lead">
                        <%= hotel.country %>
                    </p>
                    <p class="card-text">
                        <%= hotel.city %>
                    </p>
                    <p class="card-text">
                        Estimate Price : from
                        <%= hotel.minPrice %> -
                        <%= hotel.maxPrice %>
                    </p>
                    <p class="card-text">
                        <%= hotel.description %>
                    </p>
                </div>
                <div class="text-right bg-light">
                    <!-- <a class="btn btn-success" href="/hotel/<%= hotel._id %>/comments/new">Add
                        New Comment</a> -->
                    <form action="/hotel/<%= hotel._id %>/comments" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="comment[text]" placeholder="text">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-success btn-block">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-12 text-left bg-light" style="padding-left:0;padding-right: 0">
                    <% hotel.comments.forEach(function(comment){ %>
                    <div class="media">
                        <!-- <img src="..." class="align-self-center mr-3" alt="..."> -->
                        <div class="media-body>
                    <h5 class=" mt-0">
                            <%= comment.author.username %>
                            </h5>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
    </main>
    <footer>
        <% include partials/footer %>
    </footer>
</body>

</html>